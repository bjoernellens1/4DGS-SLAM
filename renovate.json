{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":semanticCommits"
  ],
  "python": {
    "ranges": [
      {
        "pattern": "^(\\d+)\\.(\\d+)\\.(\\d+)$",
        "replacement": "${major}.${minor}.${patch}"
      }
    ]
  },
  "pip": {
    "enabled": true
  },
  "docker": {
    "enabled": true,
    "major": {
      "enabled": true
    },
    "minor": {
      "enabled": true
    },
    "patch": {
      "enabled": true
    }
  },
  "dockerfile": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": "Automatically merge minor and patch updates",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "description": "Group PyTorch and related packages",
      "groupName": "PyTorch",
      "matchPackagePatterns": [
        "^torch",
        "^torchvision",
        "^torchaudio"
      ],
      "automerge": false,
      "schedule": [
        "weekly"
      ]
    },
    {
      "description": "Group CUDA and cuDNN updates",
      "groupName": "CUDA Runtime",
      "matchPackagePatterns": [
        "nvidia/cuda"
      ],
      "automerge": false,
      "schedule": [
        "monthly"
      ]
    },
    {
      "description": "Daily checks for other updates",
      "matchDatasources": [
        "pypi"
      ],
      "schedule": [
        "daily"
      ]
    }
  ],
  "schedule": [
    "before 3am every weekday"
  ],
  "timezone": "UTC",
  "prConcurrentLimit": 5,
  "semanticCommits": "enabled"
}
